<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set primary colors for the app -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Explicitly set the status bar color to white -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Ensure the status bar icons are dark for visibility on a white background -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MyDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorControlActivated">@color/Blue_1976D2</item> <!-- Màu ngày được chọn -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Màu chữ -->
        <item name="android:buttonBarPositiveButtonStyle">@style/MyDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDialogButton</item>
    </style>

    <style name="MyDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/Blue_1976D2</item>
    </style>
</resources>
